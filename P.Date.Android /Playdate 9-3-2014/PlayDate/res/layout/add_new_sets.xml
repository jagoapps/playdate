<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3"
   >
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:background="@drawable/feedback_strip1"
    android:id="@+id/linear_layout_name"
    android:layout_margin="15dp"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name" 
        android:textSize="13dp"
        android:paddingLeft="5dp"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/editText_addsets_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:ems="10" 
        android:hint="Name of set"
        android:background="@android:color/transparent"
         android:textSize="13dp"
        android:layout_weight="2">

        <requestFocus />
    </EditText>
</LinearLayout>
    <ListView
        android:id="@+id/listView_add_sets_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:layout_below="@+id/linear_layout_name"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" 
        android:layout_marginBottom="100dp">
    </ListView>

    <Button
        android:id="@+id/button_save_sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
       android:background="@drawable/add_button_1"/>

</RelativeLayout>
